{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 3,
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "template": "{{ if .WSL }}WSL {{ end }}{{ if eq .OS \"windows\" }}{{ else }}{{ .Icon }}{{ end }} ",
          "foreground": "#afffff",
          "background": "#1e1e1e",
          "properties": {
            "cache_duration": "none"
          }
        },
        {
          "type": "session",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": "nikhil ",
          "foreground": "#d0d0d0",
          "background": "#1e1e1e",
          "properties": {
            "cache_duration": "none"
          }
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " {{ .Path }} ",
          "foreground": "#121212",
          "background": "#ffd7af",
          "properties": {
            "cache_duration": "none",
            "folder_separator_icon": "\u2026/",
            "max_depth": 2,
            "style": "agnoster_short"
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " {{ .HEAD }}{{ if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}",
          "foreground": "#121212",
          "background": "#afffaf",
          "properties": {
            "cache_duration": "none",
            "fetch_status": true,
            "fetch_upstream_icon": true
          }
        },
        {
          "type": "docker",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": "{{ if .Context }} {{ .Context }} {{ end }}",
          "foreground": "#121212",
          "background": "#afd7ff",
          "properties": {
            "cache_duration": "none"
          }
        },
        {
          "type": "time",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "trailing_diamond": "\ue0b0",
          "template": " 󰥔 {{ .CurrentDate | date .Format }} ",
          "foreground": "#121212",
          "background": "#ffb3d1",
          "properties": {
            "cache_duration": "none",
            "time_format": "15:04"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "status",
          "style": "plain",
          "template": "❯ ",
          "foreground": "#afffaf",
          "properties": {
            "always_enabled": true
          }
        }
      ]
    }
  ]
}

